{
  "name": "keno-stats",
  "version": "1.0.0",
  "private": true,
  "description": "Keno Stats extension - bundled build with esbuild",
  "scripts": {
    "build": "npm run build:content && npm run build:dashboard",
    "build:content": "esbuild src/keno-tool/content.js --bundle --minify --sourcemap --outfile=dist/content.bundle.js --platform=browser --loader:.js=jsx --jsx=automatic --jsx-import-source=preact --alias:@=./src --loader:.json=json",
    "build:dashboard": "esbuild src/dashboard/dashboard-entry.js --bundle --minify --sourcemap --outfile=dist/dashboard.bundle.js --platform=browser --loader:.js=jsx --jsx=automatic --jsx-import-source=preact --alias:@=./src --loader:.json=json",
    "watch": "esbuild src/keno-tool/content.js --bundle --outfile=dist/content.bundle.js --watch --platform=browser --loader:.js=jsx --jsx=automatic --jsx-import-source=preact --alias:@=./src --loader:.json=json",
    "dev": "web-ext run --source-dir . --url https://stake.com/casino/games/keno --watch-file dist/content.bundle.js",
    "lint": "eslint \"**/*.{js,jsx}\" --ignore-pattern \"node_modules/**\" --ignore-pattern \"dist/**\" --ignore-pattern \"data/**\"",
    "lint:fix": "eslint \"**/*.{js,jsx}\" --ignore-pattern \"node_modules/**\" --ignore-pattern \"dist/**\" --ignore-pattern \"data/**\" --fix"
  },
  "devDependencies": {
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@playwright/test": "^1.57.0",
    "@types/chrome": "^0.1.32",
    "@types/node": "^20.19.27",
    "esbuild": "^0.18.17",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^14.0.0",
    "playwright": "^1.57.0",
    "typescript": "^5.8.3",
    "web-ext": "^8.3.0",
    "web-ext-types": "^3.2.1"
  },
  "dependencies": {
    "preact": "^10.28.0"
  }
}
