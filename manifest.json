{
  "manifest_version": 3,
  "name": "Stake Tools",
  "version": "1.0",
  "description": "Game tracking and utilities for Stake casino games (Keno, Mines, and more).",
  "permissions": [
    "storage",
    "management"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://stake.com/*",
        "https://stake.us/*"
      ],
      "js": [
        "dist/stake.bundle.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://stake.com/casino/games/keno*",
        "https://stake.us/casino/games/keno*",
        "https://stake.com/casino/games/mines*",
        "https://stake.us/casino/games/mines*"
      ],
      "js": [
        "dist/interceptor.js"
      ],
      "world": "MAIN",
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dashboard.html",
        "dist/dashboard.bundle.js",
        "disclaimer.html",
        "disclaimer.js",
        "config/bet-multis.json"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}